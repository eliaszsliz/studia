@import "variables"
@import '../../node_modules/vuetify/src/stylus/app'

@import "helpers"
@import "animations"

#app
  // font-family: $body-font-family

  ul, ol
    padding-left 0

  .v-btn
    letter-spacing: 0.1em

    &.v-btn--small > .v-btn__content
      padding-bottom: 4px

  @media $display-breakpoints.sm-and-down
    .display-3
      font-size 42px !important

#AppBottomNav
  z-index: 4

  .AppBottomNav_Button
      color: primary_color_light_1
  linkMixin()
    border-bottom: 6px solid accent_color
#app
  .v-btn--link
    > .v-btn__content
      padding: 0
      padding-left: $spacers.two

      > span
        linkMixin()


  a.primary--link, span.primary--link a, p.primary--link a
    linkMixin()
    font-weight: $font-weights.regular
    font-size: $button-font-size
    font-family: $body-font-family
    color: $body-color-dark
    text-transform uppercase
    text-decoration none


  .v-chip
    letter-spacing: 0.05em

  .htmlContent
    font-family: $serif-font-family

    p, li
        font-size: 17px
        letter-spacing: 0.05em
        line-height: 1.8

        &:empty
            display: none

        @media $display-breakpoints.sm-and-down
          text-align justify

    ul, ol
        margin-left: $grid-gutters.lg //16px
        margin-right: $grid-gutters.lg // 16px

        li
            font-size: 17px
            margin-bottom: $grid-gutter
            list-style: square

    img
        display: block
        margin: 8px 16px
        max-width calc(100% - 32px)
        height: auto

        &.pull-right
          float: right
          margin-right: 0

        &.pull-left
          float: left
          margin-left: 0

        &.center
          mx-auto()

        @media $display-breakpoints.sm-and-down
          float: none !important
          mx-auto(!important)

    hr
        height: 6px
        width: 64px
        background-color: #582c39 // accent_color
        content: ''
        border: none
        margin-top: 32px
        margin-bottom: 32px

    h3, h4, h5
      margin-bottom: 8px;

    h3
      font-size: 26px
      letter-spacing: 0.05em

    h4
      font-size: 20px
      letter-spacing: 0.05em

    &.htmlContentSmaller
      p, li
        font-size: 16px


  .title, .headline
    letter-spacing: 0.03em !important

  .cardPadding
    padding card_padding_mobile

    @media $display-breakpoints.md-and-up
      padding: card_padding

  .separator
      height: 6px
      background-color: accent_color
      content: ''
      width: 100%

      &.small
        width: 32px

      &.medium
        width: 64px
